---
// src/layouts/BlogPostLayout.astro
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props;
const { title, description, author, publishDate } = entry.data;
const { Content } = await entry.render();
---

<BaseLayout title={title} description={description}>
  <article class="sl-container mx-auto max-w-3xl px-6 py-16 sm:px-8">
    <header class="mb-12 text-center">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">{title}</h1>
      <p class="mt-4 text-lg text-muted">{description}</p>
      <div class="mt-6 text-sm text-muted">
        {author} Â· <time>{publishDate.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}</time>
      </div>
    </header>

    <div class="prose prose-lg dark:prose-invert max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>